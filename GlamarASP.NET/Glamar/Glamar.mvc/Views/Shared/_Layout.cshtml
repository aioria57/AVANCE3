<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bienvenido a Glamar Perú</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GlamarPerú", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Alojamiento", "Create", "Alojamiento")</li>
                    <li>@Html.ActionLink("Cliente", "Create", "Cliente")</li>
                    <li>@Html.ActionLink("Correo", "Create", "Correo")</li>
                    <li>@Html.ActionLink("Documento", "Create", "Documento")</li>
                    <li>@Html.ActionLink("Empleado", "Create", "Empleado")</li>
                    <li>@Html.ActionLink("Itinerario", "Create", "Itinerario")</li>
                    <li>@Html.ActionLink("Moneda", "Create", "Moneda")</li>
                    <li>@Html.ActionLink("Reserva", "Create", "Reserva")</li>
                    <li>@Html.ActionLink("Telefono", "Create", "Telefono")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hecho por: R. Aranguren, J. Colán y J. García - Derechos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
